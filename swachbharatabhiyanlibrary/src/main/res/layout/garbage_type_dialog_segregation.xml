<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dim_5_dp"
    android:orientation="vertical"><!--android:fitsSystemWindows="true"
    android:fillViewport="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_title"
            style="@style/MyTitle"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/segregated_bifurcated_types"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_20_sp" />
        <!--android:paddingStart="@dimen/dim_10_dp"
                    android:paddingEnd="@dimen/dim_10_dp"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorDivider" />

        <CheckBox
            android:id="@+id/cb_wetWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:checked="false"
            android:text="@string/wetWaste_rbTitle"
            android:textColor="@color/colorGrayList"
            android:textSize="@dimen/dim_14_sp" />

        <CheckBox
            android:id="@+id/cb_dryWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:checked="false"
            android:text="@string/dryWaste_rbTitle"
            android:textColor="@color/colorGrayList"
            android:textSize="@dimen/dim_14_sp" />

        <CheckBox
            android:id="@+id/cb_domesticHazardWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:checked="false"
            android:text="@string/domesticHazardWaste_rbTitle"
            android:textColor="@color/colorGrayList"
            android:textSize="@dimen/dim_14_sp" />

        <CheckBox
            android:id="@+id/cb_sanitaryWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:checked="false"
            android:text="@string/sanitaryWaste_rbTitle"
            android:textColor="@color/colorGrayList"
            android:textSize="@dimen/dim_14_sp" />

        <Button
            android:id="@+id/btn_segregatedNext"
            style="@style/MyButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_40_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:text="@string/next" />
    </LinearLayout>
</ScrollView>