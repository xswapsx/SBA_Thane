                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:gravity="left"
                    android:text="@string/string_swm_collection"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/swm_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/swm_collection_lbl"
                    android:gravity="left"
                    android:text="@string/hyphen"
                    android:textColor="@color/black_alpha_170"
                    android:textSize="@dimen/dim_17_sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </GridLayout>


    </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>