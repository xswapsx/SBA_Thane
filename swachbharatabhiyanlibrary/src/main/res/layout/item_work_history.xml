                <TextView
                    android:id="@+id/house_collection_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/house_collection_txt"
                    android:textColor="@color/black_alpha_45"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/house_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/house_collection_lbl"
                    android:layout_marginBottom="@dimen/dim_6_dp"
                    android:gravity="left"
