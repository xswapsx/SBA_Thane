                    android:textColor="@color/black_alpha_170"
                    android:textSize="@dimen/dim_17_sp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <!--6-->
            <RelativeLayout
                android:id="@+id/rl_horticulture_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5_dp"
                android:layout_marginBottom="@dimen/dim_5_dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/hort_collection_lbl"
                    android:layout_width="wrap_content"
