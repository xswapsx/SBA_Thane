<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_empty_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_16_sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="History details is empty"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dim_6_dp"
        android:gravity="center_vertical"
        android:id="@+id/li_history_detail"
        android:visibility="gone">

        <Button
            android:id="@+id/history_details_time"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="@dimen/dim_20_dp"
            android:text="@string/hyphen"
            android:textSize="@dimen/dim_12_sp"
            android:gravity="center"
            android:background="@drawable/rounded_blue_button"
            android:textColor="@color/white"
            android:padding="0dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dim_16_dp"
            android:layout_marginEnd="@dimen/dim_5_dp">

            <TextView
                android:id="@+id/history_details_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hyphen"
                android:textColor="@color/colorBlackGray"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_16_sp"/>

            <TextView
                android:id="@+id/history_details_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hyphen"
                android:textColor="@color/colorDefault"
                android:textSize="@dimen/dim_14_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/history_details_vehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hyphen"
                android:textColor="@color/colorDefault"
                android:textSize="@dimen/dim_14_sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/history_details_area"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="@string/hyphen"
            android:textSize="@dimen/dim_12_sp"
            android:gravity="end"
            android:layout_gravity="top"
            android:textColor="@color/colorDefault"
            android:textStyle="bold"
            />

    </LinearLayout>


</RelativeLayout>
