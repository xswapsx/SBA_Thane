<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:id="@+id/relativeLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_15_dp"
        android:layout_marginEnd="@dimen/dim_15_dp"
        app:cardCornerRadius="@dimen/dim_12_dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:id="@+id/user_details_card"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="@drawable/id_bg_3">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:contentDescription="@string/hyphen"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="35dp"
                    android:layout_width="@dimen/dim_150_dp"
                    android:layout_height="@dimen/dim_150_dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_user_white"
                    android:padding="0dp"
                    android:layout_marginEnd="@dimen/dim_6_dp"
                    android:background="@drawable/ic_icn_circle_white"/>

            <TextView
                android:id="@+id/txt_emp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic"
                android:layout_marginStart="@dimen/dim_15_dp"
                android:layout_marginTop="@dimen/dim_15_dp"
                android:layout_marginEnd="@dimen/dim_15_dp"
                android:layout_marginBottom="@dimen/dim_15_dp"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_14_sp"
                android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dim_40_dp"
                    android:layout_below="@id/profile_pic"
                    android:padding="@dimen/dim_12_dp">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hyphen"
                        android:gravity="center"
                        android:textSize="@dimen/dim_25_sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/user_emp_id_lbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/emp_id_short"
                            android:gravity="center"
                            android:textColor="@color/colorDivider"
                            android:layout_marginTop="@dimen/dim_10_dp"/>

                        <TextView
                            android:id="@+id/emp_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hyphen"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:textSize="@dimen/dim_20_sp"
                            android:layout_marginTop="@dimen/dim_5_dp"/>

                </LinearLayout>

            <TextView
                android:id="@+id/lbl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_id_title"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_20_sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dim_20_dp"
                android:drawableLeft="@drawable/ic_app_id_icon_white"
                android:layout_marginStart="@dimen/dim_10_dp"
                android:layout_marginEnd="@dimen/dim_10_dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_above="@id/lbl_title"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="@dimen/dim_10_dp"
                android:layout_marginEnd="@dimen/dim_10_dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_cancel_green_border"
        android:layout_gravity="top|center_horizontal"
        
        android:layout_marginEnd="12dp"
        android:layout_marginTop="-20dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>