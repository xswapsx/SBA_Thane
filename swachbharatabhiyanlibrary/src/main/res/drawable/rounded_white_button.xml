<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="@color/black_alpha_20"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@android:color/white" />
            <!-- the inside color-->
            <solid
                android:color="@android:color/white"/>
            <corners android:radius="360dp" />
            <padding
                android:left="20dp"
                android:top="5dp"
                android:right="20dp"
                android:bottom="5dp">
            </padding>
        </shape>
    </item>


</ripple>